<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title Shifter</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        
        @Styles.Render("~/bundles/bootstrap")

        @Scripts.Render("~/bundles/libs")

        @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")*@
        @{Html.RenderPartial("AppRoutes");}
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("My Shifter", "Index", "ShiftSchedule")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                           <li>@Html.ActionLink("Shift Schedule", "Index", "ShiftSchedule")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
                <img class="ajax-loader" id="ajaxLoader" src="~/Content/images/loader.gif"/>
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Shifter</p>
                </div>
            </div>
        </footer>
        
        <script type="text/javascript">
            var dataService;
            $(function () {
                dataService = new DataService();
            });
        </script>
        @RenderSection("scripts", required: false)
    </body>
</html>
