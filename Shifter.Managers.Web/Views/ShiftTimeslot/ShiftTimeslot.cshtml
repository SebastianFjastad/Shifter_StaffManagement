@model Shifter.Service.Api.Dtos.StaffTypeDto

@{
    var containerClass = "addContainer_" + Model.Id;
}

<div class="panelMinWidth addTimeslotContainer @containerClass">
    <div class="addTimeSlotHelp"></div>
    <form id="timeslotForm" action="@Url.Action("AddTimeslot", "ShiftTimeslot")" method="POST">
        <div class="form-group row">
            <label class="col-sm-3 col-xs-3 timePickerLable">Start Time</label>
            <div class="input-append bootstrap-timepicker col-sm-6">
                <div class="input-group col-xs-5 timePicker">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                    <input name="ShiftTimeSlot.StartTime" type="text" class="form-control pointer timepickerstart">
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-xs-3 timePickerLable">End Time</label>
            <div class="input-append bootstrap-timepicker col-sm-6">
                <div class="input-group col-xs-5 timePicker">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                    <input name="ShiftTimeSlot.EndTime" type="text" class="form-control pointer timepickerend">
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-xs-3 timePickerLable">&nbsp;</label>
            <div class="col-sm-6">
                <div class="col-xs-5 row">
                    <input data-staff-type-id="@Model.Id" class="btn btn-success timePicker addTimeslot" type="button" value="Save" />
                </div>
            </div>
        </div>
    </form>
</div>
